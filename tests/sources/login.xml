<pattern>
  <all flag="login">

    <attr assert="no_name">name</attr>
    <attr assert="no_password">pass</attr>

    <opt>

      <attr flag="use_https" valuePattern="yes">use-https</attr>
      <all flag="remember">

        <attr>remember</attr>
        <one assert="no_remember_method">

          <attr>user</attr>
          <attr>server</attr>

        </one>

      </all>

    </opt>

  </all>
</pattern>
