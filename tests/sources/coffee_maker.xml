<pattern>
  <all>

    <!-- String ( coffee|tea|cacao ) -->
    <attr valuePattern="coffee|tea|cacao">beverage</attr>

    <!-- Bool; default yes -->
    <attr default="yes" valuePattern="yes|no">cup</attr>

    <!-- Int ( -5..5 ); default 0 -->
    <attr default="0" valuePattern="-?[0-5]">sugar</attr>

  </all>
</pattern>