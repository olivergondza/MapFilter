<!--

Structure of not so stupid coffee maker;
  Enable setting sugar level or having own cup;
  Cup and sugar has implicit values.

Testing default and valuePattern
  
like:
  {beverage} -> {beverage:cup=yes:sugar=0}
  {beverage:cup} -> {beverage:cup:sugar=0}
  {beverage:sugar} -> {beverage:cup=yes:sugar}
  {beverage:cup:sugar}

-->
<pattern>
  <all>

    <!-- String ( coffee|tea|cacao ) -->
    <attr valuePattern="coffee|tea|cacao">beverage</attr>

    <!-- Bool; default yes -->
    <attr default="yes" valuePattern="yes|no">cup</attr>

    <!-- Int ( -5..5 ); default 0 -->
    <attr default="0" valuePattern="-?[0-5]">sugar</attr>

  </all>
</pattern>