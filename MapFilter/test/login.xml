<!--
Structure of login service

like:
  {}
  {name:pass}
  {name:pass:use-https}
  {name:pass:remember:user}
  {name:pass:remember:server}
  {name:pass:remember:use-https:user}
  {name:pass:remember:use-https:server}
but nothing else
-->
<pattern>
  <all>
    <attr>name</attr>
    <attr>pass</attr>
    <opt>
      <attr>use-https</attr>
      <all>
        <attr>remember</attr>
        <one>
          <attr>user</attr>
          <attr>server</attr>
        </one>
      </all>
    </opt>
  </all>
</pattern>
